<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ubah Petugas Harian</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="kode" class="control-label">Kode</label>
                            <input type="text" name="kode" id="kode" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="nama" class="control-label">Nama</label>
                            <input type="text" name="nama" id="nama" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="nomor_telepon" class="control-label">Nomor Telepon</label>
                            <input type="text" name="nomor_telepon" id="nomor_telepon" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="status" class="control-label">Status</label>
                            <select name="status" id="status" class="form-control">
                                <option value="1">Aktif</option>
                                <option value="0">Tidak Aktif</option>
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" onclick="loadData()">Muat Data</button>
                            <button type="button" class="btn btn-primary" onclick="simpan()">Simpan</button>
                            <a href="#" class="btn btn-secondary" onclick="batal()">Batal</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    loadData()

    function loadData() {
        var kode = document.getElementById("kode").value;
        var hostname = "https://localhost:44307/";
        var url = hostname + "GetPetugasHarian?kode=" + kode;
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                console.log(data);
                if (data && data.data && data.status === 200) {
                    var item = data.data;
                    document.getElementById("kode").value = item.kode;
                    document.getElementById("nama").value = item.nama;
                    document.getElementById("nomor_telepon").value = item.nomor_telepon;
                    document.getElementById("status").value = item.status.toString();
                } else {
                    alert("Data tidak ditemukan");
                }
            },
        });
    }

    function simpan() {
        var kode = document.getElementById("kode").value;
        var nama = document.getElementById("nama").value;
        var nomor_telepon = document.getElementById("nomor_telepon").value;
        var status = document.getElementById("status").value;
        var hostname = "https://localhost:44307/";
        var url = hostname + "UpdatePetugasHarian";
        var method = "PUT";
        if (!kode) {
            url = hostname + "InsertPetugasHarian";
            method = "POST";
        }

        var input = {
            kode: kode,
            nama: nama,
            nomor_telepon: nomor_telepon,
            status: status
        }
        var data = JSON.stringify(input);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            success: function (data, textStatus, xhr) {
                if (xhr.status === 200) {
                    alert("Data Berhasil Disimpan/Updated");
                } else {
                    alert("Gagal menyimpan/memperbarui data Petugas Harian. Kode Status: " + xhr.status);
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                console.error(xhr);
                alert("Gagal menyimpan/memperbarui data Petugas Harian. Kesalahan: " + textStatus);
            }
        });
    }

    function batal() {
        history.back();
    }
</script>
