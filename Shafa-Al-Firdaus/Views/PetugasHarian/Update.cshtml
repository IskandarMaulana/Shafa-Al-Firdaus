<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ubah Petugas Harian</h4>
                    </div>
                    <div class="card-body">
                       @*  <div class="form-group">
                            <input type="hidden" name="id" id="id" value="@ViewBag.Id" class="form-control" />
                        </div> *@
                        <div class="form-group">
                            <label name="nim" class="control-label">NIM</label>
                            <input name="nim" id="nim" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label name="nama" class="control-label">Nama</label>
                            <input name="nama" id="nama" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="prodi" class="control-label">Program Studi</label>
                            <select id="prodi" class="form-control">
                                <option value="1">Manajemen Informatika</option>
                                <option value="2">Teknik Perkakas Manufaktur</option>
                                <option value="3">Mekatronika</option>
                                <option value="4">Mesin Otomotif</option>
                                <option value="5">Tenaga Rekayasa Logistik</option>
                                <option value="6">Teknologo Konstruksi Bangunan Gedung</option>
                                <option value="7">Teknik Rekayas Pemeliharaan Alat Berat</option>
                                <option value="8">Pembuatan Peralatan Perkakas Produksi</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label name="nomor_telepon" class="control-label">Nomor Telepon</label>
                            <input name="nomor_telepon" id="nomor_telepon" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="status" class="control-label">Status</label>
                            <input name="status" id="status" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" onclick="loadData()">Muat Data</button>
                            <button type="submit" class="btn btn-primary" onclick="simpan()">Simpan</button>
                            <a href="#" class="btn btn-secondary" onclick="batal()">Batal</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function loadData() {
        var nim = document.getElementById("nim").value;
        var nama = document.getElementById("nama").value;
        var prodi = document.getElementById("prodi").value;
        var nomor_telepon = document.getElementById("nomor_telepon").value;
        var status = document.getElementById("status").value;

        var hostname = "https://localhost:44307/";
        var url = hostname + "GetPetugasHarian?nim=" + nim.value;
        var method = "GET";

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var item = data.data
                nim.value = item.nim
                nama.value = item.nama
                prodi.value = item.prodi
                nomor_telepon.value = item.nomor_telepon
                status.value = item.status
            },
        });
    }

    function simpan() {
        var nim = document.getElementById("nim").value;
        var nama = document.getElementById("nama").value;
        var prodi = document.getElementById("prodi").value;
        var nomor_telepon = document.getElementById("nomor_telepon").value;
        var status = document.getElementById("status").value;

        var hostname = "https://localhost:44307/";
        var url = hostname + "UpdatePetugasHarian";
        var method = "PUT";
        var input = {
            nim: nim,
            nama: nama,
            prodi: prodi,
            nomor_telepon: nomor_telepon,
            status: status
        }
        var data = JSON.stringify(input);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            success: function (data) {
                alert("Data Berhasil Diubah");
            },
        });
    }

    function batal() {
        history.back();
    }
</script>
