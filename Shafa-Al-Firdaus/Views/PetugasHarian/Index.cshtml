@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-body">
        <div class="my-3" style="margin-top: 40px;">
            <a class="btn btn-primary" asp-controller="PetugasHarian" asp-action="Create">Tambah Data</a>
        </div>
        <table class="table table-stripped">
            <thead>
                <tr>
                    <th scope="col">Kode</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Nomor Telepon</th>
                    <th scope="col">Status</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody id="tbody"></tbody>
        </table>
    </div>
</div>
<script>
    loadTable()

    function loadTable() {
        var hostname = "https://localhost:44307/"
        var url = hostname + "GetAllPetugasHarian"
        var method = "GET"

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            success: function (data) {
                var list = data.data;
                list.forEach(function (item) {
                    var statusText = item.status === 1 ? 'Aktif' : 'Tidak Aktif';

                    var newRow = '<tr>' +
                        '<td>' + item.kode + '</td>' +
                        '<td>' + item.nama + '</td>' +
                        '<td>' + item.nomor_telepon + '</td>' +
                        '<td>' + statusText + '</td>' +
                        '<td>' +
                        '<a class="btn btn-secondary" href="/PetugasHarian/Update?kode=' + item.kode + '">Update</a>' +
                        '<button class="btn btn-danger" value="' + item.kode + '" onclick="ubahStatus(this.value)">Tidak Aktif</button>' +
                        '</td>' +
                        '</tr>';
                    $('#tbody').append(newRow);
                });
            },
        });
    }

    function ubahStatus(id) {
        var confirmed = confirm("Apakah Anda yakin ingin mengubah status menjadi Tidak Aktif?");
        if (!confirmed) {
            return;
        }

        var hostname = "https://localhost:44307/";
        var url = hostname + "UpdateStatusPetugasHarian?kode=" + id;  // Assuming this is the correct endpoint for updating status
        var method = "PATCH";  // Use PATCH method for updating

        var updateData = {
            status: '0'  // Set the status to 0
        };

        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            data: JSON.stringify(updateData),
            success: function (data) {
                alert("Status berhasil diubah menjadi Tidak Aktif");
                location.reload();
            },
            error: function (xhr, textStatus, errorThrown) {
                console.log('Error: ' + textStatus);
                alert('Error: ' + textStatus);
            }
        });
    }
</script>
