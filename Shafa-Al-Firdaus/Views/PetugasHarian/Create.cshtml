<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Petugas Harian</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label name="nim" class="control-label">NIM</label>
                            <input name="nim" id="nim" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="nama" class="control-label">Nama</label>
                            <input name="nama" id="nama" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="prodi" class="control-label">Prodi</label>
                            <select id="prodi" class="form-control">
                                <option value="1">Manajemen Informatika</option>
                                <option value="2">TPM</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <label name="nomor_telepon" class="control-label">Nomor Telepon</label>
                            <input name="nomor_telepon" id="nomor_telepon" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="status" class="control-label">Status</label>
                            <input name="status" id="status" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" onclick="simpan()">Simpan</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Memuat opsi Prodi dari API saat halaman dimuat
    $(document).ready(function () {
        loadProdiOptions();
    });

    function loadProdiOptions() {
        // Mengambil data Prodi dari API
        $.ajax({
            url: "https://localhost:44307/GetProdiOptions", // Ganti URL dengan endpoint API yang sesuai
            method: "GET",
            success: function (data) {
                // Mengisi opsi Prodi ke dalam combobox
                var prodiDropdown = $("#prodi");
                prodiDropdown.empty(); // Mengosongkan opsi sebelum mengisi yang baru

                // Menambahkan opsi dari data yang diterima dari API
                $.each(data, function (index, item) {
                    prodiDropdown.append($("<option>").val(item.value).text(item.text));
                });
            },
            
        });
    }

    function simpan() {
        var nim = document.getElementById("nim").value;
        var nama = document.getElementById("nama").value;
        var prodi = document.getElementById("prodi").value;
        var nomor_telepon = document.getElementById("nomor_telepon").value;
        var status = document.getElementById("status").value;

        var hostname = "https://localhost:44307/";
        var url = hostname + "InsertPetugasHarian";
        var method = "POST";
        var input = {
            nim: nim,
            nama: nama,
            prodi: prodi,
            nomor_telepon: nomor_telepon,
            status: status
        };
        var data = JSON.stringify(input);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            success: function (data) {
                alert("Data Petugas Harian Berhasil Ditambahkan");
            },
            error: function () {
                alert("Gagal menyimpan data Petugas Harian.");
            }
        });
    }
</script>
