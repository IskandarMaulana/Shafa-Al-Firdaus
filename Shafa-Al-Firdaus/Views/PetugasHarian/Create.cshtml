<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Petugas Harian</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label name="kode" class="control-label">Kode</label>
                            <input name="kode" id="kode" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="nama" class="control-label">Nama</label>
                            <input name="nama" id="nama" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="nomor_telepon" class="control-label">Nomor Telepon</label>
                            <input name="nomor_telepon" id="nomor_telepon" class="form-control" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" onclick="simpan()">Simpan</button>
                            <a href="#" class="btn btn-secondary" onclick="batal()">Batal</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>  

    function simpan() {
        var nim = document.getElementById("kode").value;
        var nama = document.getElementById("nama").value;
        var nomor_telepon = document.getElementById("nomor_telepon").value;
        var status = '1';


        var hostname = "https://localhost:44307/";
        var url = hostname + "InsertPetugasHarian";
        var method = "POST";
        var input = {
            kode: nim,
            nama: nama,
            nomor_telepon: nomor_telepon,
            status: status
        };
        var data = JSON.stringify(input);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            success: function (data) {
                alert("Data Petugas Harian Berhasil Ditambahkan");
            },
            error: function () {
                alert("Gagal menyimpan data Petugas Harian.");
            }
        });
    }

    function batal() {
        history.back();
    }
</script>
