<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ubah Akun Petugas Harian</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @*<label name="username" class="control-label">Username</label>
                            *@<input type="hidden" name="username" id="username" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label name="password" class="control-label">Password</label>
                            <input name="password" id="password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" onclick="simpan()" style="margin-right: 10px;">Simpan</button>
                            <button href="#" class="btn btn-secondary" onclick="batal()">Batal</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    loadDkm();

    function loadDkm() {

        var hostname = "https://localhost:44307/";
        var url = hostname + "GetDkm?username";
        var method = "GET";
        var jwtToken = '@ViewBag.Token';
        $.ajax({
            url: url,
            method: method,
            contentType: "application/json",
            headers: {
                'Authorization': 'Bearer ' + jwtToken
            },
            success: function (data) {
                console.log(data);
                var item = data.data
                username.value = item.username
                password.value = item.password
            },
        });
    }

    function simpan() {
        var password = document.getElementById("password").value;
        var hostname = "https://localhost:44307/";
        var url = hostname + "UpdateDkm";
        var method = "PUT";
        var jwtToken = '@ViewBag.Token';

        var input = {
            username: username,
            password: password
        }

        var data = JSON.stringify(input);
        console.log(data);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            headers: {
                'Authorization': 'Bearer ' + jwtToken
            },
            success: function (data) {
                swal("Sukses!", "Akun DKM Berhasil Diubah", "success").then(() => {
                    window.location.href = myHostname + "Akun/Index";
                });
            },
            error: function () {
                swal("Gagal!", "Akun DKM Gagal Diubah", "error").then(() => {
                    window.location.href = myHostname + "Akun/Index";
                });
            },
        });
    }

    function batal() {
        history.back();
    }
</script>

