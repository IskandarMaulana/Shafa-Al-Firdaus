<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Jadwal Petugas Harian</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label name="nim" class="control-label">NIM</label>
                            <select name="nim" id="nim" class="form-control"></select>

                        </div>
                        <div class="form-group">
                            <label name="tanggal" class="control-label">Tanggal</label>
                            <input name="tanggal" id="tanggal" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="waktu" class="control-label">Waktu</label>
                            <input name="waktu" id="waktu" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label name="tugas" class="control-label">Tugas</label>
                            <input name="tugas" id="tugas" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" onclick="simpan()">Simpan</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Memuat opsi NIM dari API saat halaman dimuat
    $(document).ready(function () {
        loadNIMOptions();
    });

    function loadNIMOptions() {
        // Mengambil data NIM dari API
        $.ajax({
            url: "https://localhost:44307/GetNIMOptions", // Ganti URL dengan endpoint API yang sesuai
            method: "GET",
            success: function (data) {
                // Mengisi opsi NIM ke dalam combobox
                var nimDropdown = $("#nim");
                nimDropdown.empty(); // Mengosongkan opsi sebelum mengisi yang baru

                // Menambahkan opsi dari data yang diterima dari API
                $.each(data, function (index, item) {
                    nimDropdown.append($("<option>").val(item.value).text(item.text));
                });
            },
        });
    }

    function simpan() {
        var nim = document.getElementById("nim").value;
        var nama = document.getElementById("nama").value;
        var prodi = document.getElementById("prodi").value;
        var nomor_telepon = document.getElementById("nomor_telepon").value;
        var status = document.getElementById("status").value;

        var hostname = "https://localhost:44307/";
        var url = hostname + "InsertPetugasHarian";
        var method = "POST";
        var input = {
            nim: nim,
            nama: nama,
            prodi: prodi,
            nomor_telepon: nomor_telepon,
            status: status
        };
        var data = JSON.stringify(input);

        $.ajax({
            url: url,
            method: method,
            data: data,
            contentType: "application/json",
            success: function (data) {
                alert("Data Petugas Harian Berhasil Ditambahkan");
            },
            error: function () {
                alert("Gagal menyimpan data Petugas Harian.");
            }
        });
    }
</script>