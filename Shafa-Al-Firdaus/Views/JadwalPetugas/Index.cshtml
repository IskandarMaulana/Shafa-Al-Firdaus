                        '<td>' + item.id + '</td>' +
                        '<td>' + item.nim + '</td>' +
                        '<td>' + item.tanggal + '</td>' +
                        '<td>' + item.waktu + '</td>' +
                        '<td>' + item.tugas + '</td>' +
                        '<td>' +
                        '<a class="btn btn-secondary" href="/Jadwal_Petugas/Update?Name=' + item.Name + '">Update</a>' +
                        '<button class="btn btn-danger" value="' + item.id_jadwal + '" onclick="hapus(this.value)">Delete</button>' +
